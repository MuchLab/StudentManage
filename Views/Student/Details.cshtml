@model Homework06.Application.Models.Student
<div class="card">
    <div class="card-header text-center">
        <h1>学生详情</h1>
    </div>
    <div class="card-body text-center">
        <table class="layui-table">
            <tbody>
                <tr>
                    <td>Id</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>名称</td>
                    <td>@Model.FirstName @Model.LastName</td>
                </tr>
                <tr>
                    <td>城市</td>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <td>国家</td>
                    <td>@Model.State</td>
                </tr>
                <tr>
                    <td>专业</td>
                    <td>@Model.Major</td>
                </tr>
                <tr>
                    <td>GPA</td>
                    <td>@Model.GPA</td>
                </tr>
                <tr>
                    <td>ZipCode</td>
                    <td>@Model.ZipCode</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Index" class="btn btn-primary">返回</a>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">编辑</a>
        <a asp-action="CourseList" asp-route-id="@Model.Id" class="btn btn-success">选课</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">删除</a>
    </div>
</div>